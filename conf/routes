# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# HTML
GET     /                               controllers.Assets.at(path="/public/html", file="index.html")
GET     /index.html                     controllers.Assets.at(path="/public/html", file="index.html")
GET     /imageplant-list.html           controllers.Assets.at(path="/public/html", file="imageplant-list.html")
GET     /imageplant.html                controllers.Assets.at(path="/public/html", file="imageplant.html")
GET     /imageplant-overview.html       controllers.Assets.at(path="/public/html", file="imageplant-overview.html")
GET     /image-report.html              controllers.Assets.at(path="/public/html", file="image-report.html")
GET     /template-list.html             controllers.Assets.at(path="/public/html", file="template-list.html")
GET     /image-list.html                controllers.Assets.at(path="/public/html", file="image-list.html")
GET     /image-content.html             controllers.Assets.at(path="/public/html", file="image-content.html")
GET     /404.html                       controllers.Assets.at(path="/public/html", file="404.html")
GET     /javascripts/*file              controllers.Assets.at(path="/public/javascripts", file)
GET     /stylesheets/*file              controllers.Assets.at(path="/public/stylesheets", file)
GET     /images/*file                   controllers.Assets.at(path="/public/images", file)

# REST Endpoints
POST    /rest/v1/imageplants                                @com.images3.rest.ImagePlantResource.addImagePlant()
PUT     /rest/v1/imageplants/:id                            @com.images3.rest.ImagePlantResource.updateImagePlant(id:String)
DELETE  /rest/v1/imageplants/:id                            @com.images3.rest.ImagePlantResource.deleteImagePlant(id:String)
GET     /rest/v1/imageplants/:id                            @com.images3.rest.ImagePlantResource.getImagePlant(id:String)
GET     /rest/v1/imageplants                                @com.images3.rest.ImagePlantResource.getAllImagePlants(page:String ?= null)
GET     /rest/v1/imageplants/:id/imagereport                @com.images3.rest.ImagePlantResource.getImageReport(id:String, templateName:String ?= null, startTime:Long, length:Long, timeUnit:String, types:String)

POST    /rest/v1/imageplants/:imagePlantId/templates/:name  @com.images3.rest.TemplateResource.addTemplate(imagePlantId:String, name:String)
PUT     /rest/v1/imageplants/:imagePlantId/templates/:name  @com.images3.rest.TemplateResource.updateTemplate(imagePlantId:String, name:String)
GET     /rest/v1/imageplants/:imagePlantId/templates/:name  @com.images3.rest.TemplateResource.getTemplate(imagePlantId:String, name:String)
DELETE  /rest/v1/imageplants/:imagePlantId/templates/:name  @com.images3.rest.TemplateResource.deleteTemplate(imagePlantId:String, name:String)
GET     /rest/v1/imageplants/:imagePlantId/templates        @com.images3.rest.TemplateResource.getTemplates(imagePlantId:String, page:String ?= null)
GET     /rest/v1/imageplants/:imagePlantId/templates/active/          @com.images3.rest.TemplateResource.getActiveTemplates(imagePlantId:String, page:String ?= null)
GET     /rest/v1/imageplants/:imagePlantId/templates/archived/        @com.images3.rest.TemplateResource.getArchivedTemplates(imagePlantId:String, page:String ?= null)
POST    /rest/v1/imageplants/:imagePlantId/images                    @com.images3.rest.ImageResource.addImage(imagePlantId:String)
GET     /rest/v1/imageplants/:imagePlantId/images                    @com.images3.rest.ImageResource.getImages(imagePlantId:String, page:String ?= null)

GET     /rest/v1/imageplants/:imagePlantId/images/:imageId/info                         @com.images3.rest.ImageResource.getImage(imagePlantId:String, imageId:String)
GET     /rest/v1/imageplants/:imagePlantId/images/:imageId/info/:templateName           @com.images3.rest.ImageResource.getImageWithTemplate(imagePlantId:String, imageId:String, templateName:String)
GET     /rest/v1/imageplants/:imagePlantId/templates/:templateName/images/         @com.images3.rest.ImageResource.getImagesByTemplate(imagePlantId:String, templateName:String, page:String ?= null)
GET     /rest/v1/imageplants/:imagePlantId/images/:imageId/                        @com.images3.rest.ImageResource.getVersioningImages(imagePlantId:String, imageId:String, page:String ?= null)
GET     /rest/v1/imageplants/:imagePlantId/images/:imageId/content                 @com.images3.rest.ImageResource.getImageContent(imagePlantId:String, imageId:String)
GET     /rest/v1/imageplants/:imagePlantId/images/:imageId/content/:templateName   @com.images3.rest.ImageResource.getImageContentWithTemplate(imagePlantId:String, imageId:String, templateName:String)